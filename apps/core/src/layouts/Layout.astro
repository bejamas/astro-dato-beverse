---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import queryCMS from '../lib/cms';
import { Seo } from '@datocms/astro';
import '../styles/global.css';

const query = `
  query {
    _site {
      faviconMetaTags {
        attributes
        content
        tag
      }
    }
  }
`;

const { _site } = await queryCMS(query);
const { additionalSeo = [] } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <Seo data={[..._site.faviconMetaTags, ...additionalSeo]} />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Geist+Mono&display=swap" rel="stylesheet">
  </head>
  <body class="font-serif bg-background text-foreground">
    <div class="grid min-h-screen grid-rows-[auto_1fr_auto] grid-cols-[minmax(1em,1fr)_minmax(0,var(--outer-container-width))_minmax(1em,1fr)]">
      <Header />
      <main class="col-start-2 border-x border-border relative z-1 after:hidden after:2xl:block after:absolute after:left-1/2 after:-translate-x-1/2 after:top-0 after:w-[1195px] after:aspect-square after:border after:border-border after:rounded-full after:content-[''] after:pointer-events-none">
        <slot />
      </main>
      <Footer />
    </div>
  </body>
</html>




