---
import PrimaryButton from './PrimaryButton.astro';
const { hero } = Astro.props;
---
<section>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-3 p-4">
    <!-- <div class="bg-primary-foreground">
      <img src={hero.heroImage.url} alt={hero.heroImage.alt}>
    </div> -->
    <div class="flex flex-col gap-4 p-4">
      <h2 class="text-4xl">{hero.heroTitle}</h2>      
      <div class="flex gap-4 mb-6">
        {hero.ctas && hero.ctas.length > 0 && hero.ctas.map(cta => (
          <PrimaryButton label={cta.label} slug={cta.slug} variant={cta.variant} />
        ))}
      </div>
    </div>
    <div class="p-4 text-base leading-7">{hero.heroSubtitle}</div>
  </div>
</section>
