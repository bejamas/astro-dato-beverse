---
import PrimaryButton from './PrimaryButton.astro';
const { hero } = Astro.props;

---
<section>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-3 p-4">
    <div>
      <img src={hero.heroImage.url} alt={hero.heroImage.alt}>
    </div>
    <div class="flex flex-col gap-6 p-4">
      <h2 class="text-3xl">{hero.heroTitle}</h2>
      <div class="text-xs leading-4">{hero.heroSubtitle}</div>
      <div class="flex gap-4 mb-6">
        {hero.ctas && hero.ctas.length > 0 && hero.ctas.map(cta => (
          <PrimaryButton label={cta.label} slug={cta.slug} variant={cta.variant} />
        ))}
      </div>
    </div>
  </div>
</section>
