---
import { Image } from '@datocms/astro';
import { getRelativeLocaleUrl } from 'astro:i18n';
const { brand } = Astro.props;

---

<article class="relative">
  <a class="absolute inset-0 flex flex-col justify-between p-6" href={getRelativeLocaleUrl(Astro.currentLocale, `/brands/${brand.slug}`)}>   
    <h3 class="text-xs">{brand.name}</h3>
    <span class="text-[10px] text-muted uppercase">{brand.productType}</span>
  </a>
  {brand.images && brand.images[0] && (
    <Image
      data={brand.images[0].responsiveImage}
      pictureClass="w-full"
    />
  )}    
</article>
