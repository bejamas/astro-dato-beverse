---
const { review } = Astro.props;
---
<article class="max-w-[500px] mx-auto flex flex-col items-center gap-4 pt-20 pb-6">
  {review.avatar && (    
    <img src={review.avatar.url} alt={review.avatar.alt} class="w-[70px] rounded-full filter saturate-0" />
  )}
  <h3 class="text-xs uppercase text-muted">[ {review.reviewerName} ]</h3>
  <div class="flex gap-[2px]">
    {Array.from({ length: 5 }, (_, i) => (
      <svg width="16" height="16" class={`${i >= review.reviewScore ? "text-transparent" : "text-amber-400"}`}>
        <use href="#star"></use>
      </svg>
    ))}
  </div>
  <p class="text-center leading-6">{review.body}</p>
</article>
